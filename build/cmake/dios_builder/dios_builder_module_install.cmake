# 
# 拷贝到prebuilt
# 
FUNCTION(_dios_builder_module_exe_copy_to_prebuilt_impl)	
	IF(DIOS_CMAKE_PLATFORM_WIN32 OR DIOS_CMAKE_PLATFORM_WIN64)	
		# 安装文件到目录
		INSTALL(TARGETS ${DIOS_BUILDER_MODULE}
			CONFIGURATIONS debug
			RUNTIME DESTINATION bin/${DIOS_CMAKE_COMPILER}/debug
		)	
		INSTALL(TARGETS ${DIOS_BUILDER_MODULE}
			CONFIGURATIONS release
			RUNTIME DESTINATION bin/${DIOS_CMAKE_COMPILER}/release
		)	

		# 打包符号文件和bin文件;
		INSTALL(TARGETS ${DIOS_BUILDER_MODULE}
			CONFIGURATIONS debug
			RUNTIME DESTINATION symbols/${DIOS_CMAKE_COMPILER}/debug
		)		
		INSTALL(TARGETS ${DIOS_BUILDER_MODULE}
			CONFIGURATIONS release
			RUNTIME DESTINATION symbols/${DIOS_CMAKE_COMPILER}/release
		)

		install(DIRECTORY ${EXECUTABLE_OUTPUT_PATH}/debug/
			CONFIGURATIONS debug
		 	DESTINATION symbols/${DIOS_CMAKE_COMPILER}/debug
		 	FILES_MATCHING PATTERN "*.pdb")

		install(DIRECTORY ${EXECUTABLE_OUTPUT_PATH}/release/
			CONFIGURATIONS release
		 	DESTINATION symbols/${DIOS_CMAKE_COMPILER}/release
		 	FILES_MATCHING PATTERN "*.pdb")

	ELSEIF(DIOS_CMAKE_PLATFORM_UNIX)	
		INSTALL(TARGETS ${DIOS_BUILDER_MODULE}
			RUNTIME DESTINATION bin/${DIOS_CMAKE_COMPILER}
			LIBRARY DESTINATION bin/${DIOS_CMAKE_COMPILER}
			ARCHIVE DESTINATION lib/${DIOS_CMAKE_COMPILER}
		)
		INSTALL(TARGETS ${DIOS_BUILDER_MODULE}
			RUNTIME DESTINATION ${DIOS_CMAKE_INSTALL_DIRECTORY}/bin/${DIOS_CMAKE_COMPILER}
			LIBRARY DESTINATION ${DIOS_CMAKE_INSTALL_DIRECTORY}/bin/${DIOS_CMAKE_COMPILER}
		)		
	ELSEIF(DIOS_CMAKE_PLATFORM_IOS)	
		# 安装文件到目录
		INSTALL(TARGETS ${DIOS_BUILDER_MODULE}
			CONFIGURATIONS debug
			RUNTIME DESTINATION bin/${DIOS_CMAKE_COMPILER}/debug
			BUNDLE DESTINATION bin/${DIOS_CMAKE_COMPILER}/debug
		)	
		INSTALL(TARGETS ${DIOS_BUILDER_MODULE}
			CONFIGURATIONS release
			RUNTIME DESTINATION bin/${DIOS_CMAKE_COMPILER}/release
			BUNDLE DESTINATION bin/${DIOS_CMAKE_COMPILER}/release
		)
	ELSEIF(DIOS_CMAKE_PLATFORM_ANDROID)	
		# 安装文件到目录
		INSTALL(TARGETS ${DIOS_BUILDER_MODULE}
			RUNTIME DESTINATION bin/${DIOS_CMAKE_COMPILER}
			LIBRARY DESTINATION bin/${DIOS_CMAKE_COMPILER}
			ARCHIVE DESTINATION lib/${DIOS_CMAKE_COMPILER}
		)	
	ENDIF()

	IF(DIOS_CMAKE_PLATFORM_WIN32 OR DIOS_CMAKE_PLATFORM_WIN64)	
		# 方便调试拷贝 DIOS_CMAKE_INSTALL_DIRECTORY_WIN32 的bin内容拷贝到运行目录;
		set(DEPENDENCIES_DLL_FILES ${DIOS_CMAKE_INSTALL_DIRECTORY_WIN32}\\bin\\${DIOS_CMAKE_COMPILER}\\"$(ConfigurationName)"\\*.dll)
		add_custom_command( TARGET ${DIOS_BUILDER_MODULE}
			PRE_LINK 
			COMMAND if exist ${DEPENDENCIES_DLL_FILES} (copy ${DEPENDENCIES_DLL_FILES} output\\"$(ConfigurationName)"\\)
			)
			
		set(DEPENDENCIES_MANIFEST_FILES ${DIOS_CMAKE_INSTALL_DIRECTORY_WIN32}\\bin\\${DIOS_CMAKE_COMPILER}\\"$(ConfigurationName)"\\*.manifest)
		add_custom_command( TARGET ${DIOS_BUILDER_MODULE}
			PRE_LINK 
			COMMAND if exist ${DEPENDENCIES_MANIFEST_FILES} (copy ${DEPENDENCIES_MANIFEST_FILES} output\\"$(ConfigurationName)"\\)
			)
		
		# 方便调试拷贝EXE相关的到 DIOS_CMAKE_INSTALL_DIRECTORY_WIN32
		set(OUTPUT_EXE_FILES output\\"$(ConfigurationName)"\\*.exe)
		add_custom_command(TARGET ${DIOS_BUILDER_MODULE}
			POST_BUILD 
			COMMAND if exist ${OUTPUT_EXE_FILES} (copy ${OUTPUT_EXE_FILES} ${DIOS_CMAKE_INSTALL_DIRECTORY_WIN32}\\bin\\${DIOS_CMAKE_COMPILER}\\"$(ConfigurationName)"\\)
			)
	ENDIF()
ENDFUNCTION()

